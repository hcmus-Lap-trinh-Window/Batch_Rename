<UserControl x:Class="RuleWindow.ReplaceSpecialCharacterWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RuleWindow"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="10">
        <TextBlock HorizontalAlignment="left" FontWeight="Bold">Replace:</TextBlock>
        <TextBox HorizontalAlignment="Stretch" x:Name="ReplacingCharacter" Text="{Binding ReplaceCharacter}" TextChanged="replacingCharacter_TextChanged" PreviewTextInput="ValidationTextBox1"/>
        <TextBlock HorizontalAlignment="left" FontWeight="Bold">Into:</TextBlock>
        <TextBox HorizontalAlignment="Stretch" x:Name="IntoCharacter" Text="{Binding IntoCharacter}" TextChanged="intoCharacter_TextChanged" PreviewTextInput="ValidationTextBox2"/>
    </StackPanel>
</UserControl>
